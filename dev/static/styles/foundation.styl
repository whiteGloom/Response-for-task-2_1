@font-face {
  font-family: myriad-pro
  font-weight: 450
  src: url('../fonts/myriad-pro.otf') format('opentype'),  url('../fonts/myriad-pro.eot?#') format('eot'), url('../fonts/myriad-pro.ttf') format('truetype'), url('../fonts/myriad-pro.woff') format('woff'), url('../images/myriad-pro.svg') format('svg')
}

@font-face {
  font-family: myriad-pro
  font-weight: bold
  src: url('../fonts/myriad-pro-bold.otf') format('opentype'),  url('../fonts/myriad-pro-bold.eot?#') format('eot'), url('../fonts/myriad-pro-bold.ttf') format('truetype'), url('../fonts/myriad-pro-bold.woff') format('woff'), url('../images/myriad-pro-bold.svg') format('svg')
}

@font-face {
  font-family: myriad-pro
  font-weight: 200
  src: url('../fonts/myriad-pro-light-semi-ext.eot') format('eot?#'), url('../fonts/myriad-pro-light-semi-ext.ttf') format('truetype'), url('../fonts/myriad-pro-light-semi-ext.woff') format('woff'), url('../images/myriad-pro-light-semi-ext.svg') format('svg')
}

html
  background-color: white
  font-size: 7.41pt
  font-family: myriad-pro
  font-weight: 450
  color: black
  @media screen and (max-width:2000px)
    font-size: 6.41pt
  @media screen and (max-width:1880px)
    font-size: 5.41pt
  @media screen and (max-width:1460px)
    font-size: 4.81pt
  @media screen and (max-width:1340px)
    font-size: 4.41pt
  @media screen and (max-width:1180px)
    font-size: 3.41pt
  @media screen and (max-width:910px)
    font-size: 3.2pt
  @media screen and (max-width:880px)
    font-size: 6pt
  @media screen and (max-width:860px)
    font-size: 5.5pt
  @media screen and (max-width:790px)
    font-size: 5pt
  @media screen and (max-width:720px)
    font-size: 4pt
  @media screen and (max-width:575px)
    font-size: 3.4pt
  @media screen and (max-width:490px)
    font-size: 2.8pt
  @media screen and (max-width:400px)
    font-size: 2.5pt

ul
body
h1
h2
li
p
  margin: 0