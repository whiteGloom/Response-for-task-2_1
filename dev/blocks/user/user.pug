include ../icon/icon

mixin user(options)
    -
        options = options ? options : {};
        const {name = "name", surname, profession = "unknown", logo} = options;
    .user&attributes(attributes)
        .user__image
            +icon({src: logo, alt: "Logo"})
        .user__info-box
            em.user__info.user__info_type_name= name
            if surname
                em.user__info.user__info_type_surname= surname
            em.user__info.user__info_type_profession= profession