//- Миксин создаёт блок рейтинга.
//- Ожидается элемент райтинга.
mixin rate(options)
    -
        var options = options ? options : {};
    .rate&attributes(attributes)
        if block
            block

//- Миксин создаёт элемент рейтинга. Свойства:
//- "title" (string) -  заголовок элемента. По умолчанию - "title".
//- "type" (string) ["linear", "dotted"] - тип рейтинга. По умолчанию - "linear". 
//- "value" (number) - значение элемента. По умолчанию - 50.
mixin rateEl(options)
    -
        var options = options ? options : {};
        var title = options.title ? options.title : "title",
            type = options.type ? options.type : "linear",
            value = options.value ? options.value : 50;
    .rate__el(data-value=value + "%" class="" + (" rate__el_type_" + type))&attributes(attributes)
        em.rate__el-title=title
        .rate__el-value-box(class="" + (" rate__el-value-box_type_" + type))
            case type
                when "dotted"
                    - var filled = Math.round((value * 12) / 100);
                    - for(var i=0; i < filled; i++)
                        .rate__el-value(class="" + (" rate__el-value_type_" + type) + (" rate__el-value_color_blue"))
                    - for(var i=0; i < 12 - filled; i++)
                        .rate__el-value(class="" + (" rate__el-value_type_" + type) + (" rate__el-value_color_gray"))
                when "linear"
                    .rate__el-value(style="width:" + value + "%" class="" + (" rate__el-value_type_" + type) + (" rate__el-value_color_blue"))
                    .rate__el-value(style="width:" + (100 - value) + "%" class="" + (" rate__el-value_type_" + type) + (" rate__el-value_color_gray"))