.icon
  width: 100%

  &__outer
    position: relative
    border: .27rem solid #3d6cb0
    border-radius: 50%
    padding-bottom: 100%
    width: 100%

  &__image
    position: absolute;
    width: 100%
    height: 100%
    padding: 6%;
    box-sizing: border-box;
    object-fit: cover;
    border-radius: 50%;
    background-size: cover;
    background-color: #3d6cb0;
    background-clip: content-box;