.contacts{}

.contacts__el
  margin-top: 6rem
  display: flex
  justify-content: space-between

.contacts__el:first-child
  margin-top: 4rem
  
.contacts__el-title
  width: 31%
  font-style: normal
  font-size: 4rem
  text-transform: uppercase
  font-family: Myriad-Pro, Arial, sans-serif
  font-weight: bold
  color: #3d6cb0

.contacts__el-value
  width: 69%
  font-size: 4rem
  font-style: normal
  color: black
  text-decoration: none

