.contacts
  &__el
    margin-top: 6rem
    display: flex
    justify-content: space-between

    &:first-child
      margin-top: 4rem
    
  &__el-title
    width: 31%
    font-size: 4rem
    text-transform: uppercase
    font-family: Myriad-Pro, Arial, sans-serif
    font-weight: bold
    color: #3d6cb0

  &__el-value
    width: 69%
    font-size: 4rem
    color: black
    text-decoration: none

    &:visited
      color: black